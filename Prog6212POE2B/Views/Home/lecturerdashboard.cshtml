@{
    ViewData["Title"] = "Lecturer Dashboard";
}

<h2 class="text-center mb-4">Lecturer Claims Dashboard</h2>


<table class="table table-striped table-bordered w-75 mx-auto mb-4">
    <thead class="table-light">
        <tr>
            <th>Lecturer Name</th>
            <th>Description</th>
            <th>Hours Worked</th>
            <th>Claim Amount</th>
            <th>Status</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Phil Ross</td>
            <td>INSY</td>
            <td>10</td>
            <td>$500</td>
            <td>Pending</td>
            <td><a href="#" class="text-primary">View</a></td>
        </tr>
        <tr>
            <td>Karen tenten</td>
            <td>CLDV</td>
            <td>8</td>
            <td>$400</td>
            <td>Approved</td>
            <td><a href="#" class="text-primary">View</a></td>
        </tr>
    </tbody>
</table>


<div class="w-75 mx-auto p-4 bg-white rounded shadow">
    <h4 class="mb-3">Submit New Claim</h4>
    <div class="mb-3">
        <label class="form-label">Lecturer Name</label>
        <input type="text" class="form-control" placeholder="Enter your name" />
    </div>
    <div class="mb-3">
        <label class="form-label">Description of Work</label>
        <input type="text" class="form-control" placeholder="Enter description" />
    </div>
    <div class="mb-3">
        <label class="form-label">Hours Worked</label>
        <input type="number" class="form-control" placeholder="Enter hours" />
    </div>
    <div class="mb-3">
        <label class="form-label">Supporting Document</label>
        <input type="file" class="form-control" />
    </div>
    <button class="btn btn-success w-100">Submit Claim</button>
</div>

<style>
    body {
        background-color: #f9f9f9;
        font-family: Arial, sans-serif;
        padding: 20px 0;
    }

    h2, h4 {
        color: #333;
    }
</style>
